@Library('shared-library') _
pipeline {
  agent none
  stages {
    stage('BuildAndTest') {
      matrix {
        agent {
          label "${PLATFORM}"
        }
        axes {
          axis {
            name 'PLATFORM'
            values 'linux', 'macos','windows'
          }
        }
        stages {
          stage('Build') {
            steps {
              runCommand(script:'java -version')
              runCommand(script:'jreleaser --version')
            }
          }
        }
      }
    }
  }
}
