@Library('shared-library') _
pipeline {
  agent none
  environment {
    JRELEASER_GITHUB_TOKEN=credentials('jreleaser-github-token')
  }
  stages {
    stage('Greeting') {
      matrix {
        agent {
          label "${PLATFORM}"
        }
        axes {
          axis {
            name 'PLATFORM'
            values 'linux', 'macos','windows'
          }
        }
        stages {
          stage('Prepare') {
            steps {
              runCommand(script:'gu install native-image')
            }
          }
          stage('Build') {
            steps {
              runCommand(script:'./mvnw clean package -Pnative')
            }
          }
          stage('Package') {
            steps {
              runCommand(script:'./mvnw package -Pdist')
            }
          }
          stage('Release') {
            steps {
              runCommand(script:'jreleaser full-release')
            }
          }
        }
      }
    }
  }
}
