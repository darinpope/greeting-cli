@Library('shared-library') _
pipeline {
  agent none
  stages {
    stage('Greetubg') {
      matrix {
        agent {
          label "${PLATFORM}"
        }
        axes {
          axis {
            name 'PLATFORM'
            values 'linux', 'macos','windows'
          }
        }
        stages {
          stage('Build') {
            steps {
              runCommand(script:'./mvnw clean package -Pnative')
            }
          }
          stage('Package') {
            steps {
              runCommand(script:'./mvnw package -Pdist')
            }
          }
        }
      }
    }
  }
}
